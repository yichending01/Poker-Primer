                <div class="tools-grid">
                    <div class="tool-item" id="hand-evaluator">
                        <img src="/assets/badges/hand_evaluator_badge.png">
                    </div>

                    <div class="tool-item" id="odds-calculator">
                        <img src="/assets/badges/odds_calculator_badge.png">
                    </div>

                    <div class="tool-item">
                        <img src="/assets/badges/tools_coming_soon_badge.png">
                    </div>
                </div>
            </div>
