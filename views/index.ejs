                <div class="drills-grid">
                    <!-- Drill 1 -->
                    <div class="drill-item" id="whats-your-hand">
                        <img src="/assets/badges/whats_your_hand_badge.png">
                    </div>

                    <!-- Drill 2 -->
                    <div class="drill-item" id="showdown">
                        <img src="/assets/badges/showdown_badge.png">
                    </div>

